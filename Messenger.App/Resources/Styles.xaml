<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="Inter">pack://application:,,,/Fonts/#Inter</FontFamily>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource Inter}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Color x:Key="BackgroundColor">#edede9</Color>
    <Color x:Key="FontColor">#d6ccc2</Color>
    <Color x:Key="AccentColor">#f5ebe0</Color>
    <Color x:Key="BorderColor">#d5bdaf</Color>
    <Color x:Key="ShadowedColor">#e3d5ca</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="FontBrush" Color="{StaticResource FontColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="ShadowedBrush" Color="{StaticResource ShadowedColor}"/>
</ResourceDictionary>